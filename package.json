{
  "name": "horizon-hop",
  "displayName": "Horizon hop",
  "version": "0.0.2",
  "description": "Develop more efficient and aesthetically pleasing browser plugins",
  "author": "LinHanPro",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@iconify/react": "^6.0.0",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@wangeditor/editor": "^5.1.23",
    "@wangeditor/editor-for-react": "^1.0.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.12.2",
    "lodash-es": "^4.17.21",
    "lucide-react": "^0.511.0",
    "md5": "^2.3.0",
    "next-themes": "^0.4.6",
    "pako": "^2.1.0",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "sonner": "^2.0.3",
    "tailwind-merge": "^3.3.0",
    "tailwindcss": "3.4.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "postcss": "8.4.33",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "<all_urls>"
    ],
    "content_security_policy": {
      "extension_pages": "script-src 'self' ; object-src 'self'"
    },
    "permissions": [
      "activeTab",
      "tabs",
      "storage",
      "contextMenus",
      "notifications"
    ],
    "commands": {
      "openPopup": {
        "suggested_key": {
          "default": "Alt+O",
          "mac": "Alt+O",
          "windows": "Alt+O"
        },
        "description": "打开popup"
      },
      "openFunctionArea": {
        "suggested_key": {
          "default": "Alt+P",
          "mac": "Alt+P",
          "windows": "Alt+P"
        },
        "description": "打开功能面板"
      }
    }
  }
}